@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="flex h-screen items-center justify-center px-4 py-10 sm:px-6 sm:py-16 lg:px-8">
    <div class="xl:mx-auto xl:w-full xl:max-w-sm 2xl:max-w-md text-center">
        <h2 class="text-2xl font-bold leading-tight text-black mb-4">
            Are you sure you want to log out?
        </h2>
        <form class="inline-block" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="inline-flex items-center justify-center rounded-md bg-black px-3.5 py-2.5 font-semibold leading-7 text-white hover:bg-black/80">
                Logout <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
            </button>
        </form>
    </div>
</div>