@page
@model EventOrganizer.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-dark-800 ">Get in Touch</h1>
        <p class="mt-3 text-lg text-gray-600 dark:text-gray-400">We'd love to hear from you. Fill out the form or reach us directly.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-900 shadow-xl rounded-2xl p-8">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-gray-200">Send a Message</h2>

            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Contact.FullName" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Full Name</label>
                        <input asp-for="Contact.FullName" type="text" class="w-full px-4 py-3 rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="John Doe" />
                        <span asp-validation-for="Contact.FullName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Contact.Subject" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Phone Number</label>
                        <input asp-for="Contact.Subject" type="text" class="w-full px-4 py-3 rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="+93 123 456 7890" />
                        <span asp-validation-for="Contact.Subject" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Contact.Email" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
                    <input asp-for="Contact.Email" type="email" class="w-full px-4 py-3 rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="you@example.com" />
                    <span asp-validation-for="Contact.Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Contact.Message" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Your Message</label>
                    <textarea asp-for="Contact.Message" rows="5" class="w-full px-4 py-3 rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Type your message..."></textarea>
                    <span asp-validation-for="Contact.Message" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <button type="submit" class="w-full py-3 px-6 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition ease-in-out">
                        Send Message
                    </button>
                </div>
            </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
            <div class="flex items-start gap-5">
                <div class="bg-blue-100 p-3 rounded-full text-blue-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M17 9V7a5 5 0 00-10 0v2a5 5 0 00-5 5v5a2 2 0 002 2h16a2 2 0 002-2v-5a5 5 0 00-5-5z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-dark">Our Office</h3>
                    <p class="mt-1 text-gray-500 dark:text-gray-400">123 Event Street, Kabul, Afghanistan</p>
                </div>
            </div>

            <div class="flex items-start gap-5">
                <div class="bg-green-100 p-3 rounded-full text-green-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6A19.79 19.79 0 012 4.08a2 2 0 012-2h3a2 2 0 012 1.72 13 13 0 00.7 2.81 2 2 0 01-.45 2.11l-1.27 1.27a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 13 13 0 002.81.7A2 2 0 0122 16.92z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-dark">Call Us</h3>
                    <p class="mt-1 text-gray-500 dark:text-gray-400">+93 123 456 7890</p>
                </div>
            </div>

            <div class="flex items-start gap-5">
                <div class="bg-yellow-100 p-3 rounded-full text-yellow-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-dark">Email Us</h3>
                    <p class="mt-1 text-gray-500 dark:text-gray-400">info@eventorganizer.com</p>
                </div>
            </div>
        </div>
    </div>
</div>
